{
  "info": {
    "_postman_id": "leadwave-api-collection",
    "name": "LeadWave API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "adminEmail", "value": "admin@demo.com" },
    { "key": "adminPass", "value": "Admin123!" },
    { "key": "salesEmail", "value": "sales@demo.com" },
    { "key": "salesPass", "value": "Sales123!" },
    { "key": "token", "value": "" },
    { "key": "adminToken", "value": "" },
    { "key": "companyId", "value": "" },
    { "key": "leadId", "value": "" },
    { "key": "salesUserId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth - Login (Admin)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPass}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Login (Salesperson)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{salesEmail}}\",\n  \"password\": \"{{salesPass}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Create Lead (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Demo\",\n  \"lastName\": \"Lead\",\n  \"email\": \"demo.lead@example.com\",\n  \"phone\": \"+1234567890\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/leads",
          "host": ["{{baseUrl}}"],
          "path": ["api", "leads"]
        }
      }
    },
    {
      "name": "Assign Lead (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{salesUserId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/leads/{{leadId}}/assign",
          "host": ["{{baseUrl}}"],
          "path": ["api", "leads", "{{leadId}}", "assign"]
        }
      }
    },
    {
      "name": "Get Assigned Leads (Salesperson)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/leads/assigned",
          "host": ["{{baseUrl}}"],
          "path": ["api", "leads", "assigned"]
        }
      }
    },
    {
      "name": "Update Lead (Salesperson limited)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"leadId\": \"{{leadId}}\",\n  \"status\": \"follow_up\",\n  \"followupdate\": \"2026-02-05T10:00:00Z\",\n  \"note_desc\": \"Called and discussed features\",\n  \"expectedValue\": 5000,\n  \"contacted\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/leads/update-by-salesperson",
          "host": ["{{baseUrl}}"],
          "path": ["api", "leads", "update-by-salesperson"]
        }
      }
    },
    {
      "name": "Create Call (Salesperson)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"leadId\": \"{{leadId}}\",\n  \"callTime\": \"2026-01-29T10:30:00Z\",\n  \"durationSeconds\": 180,\n  \"callStatus\": \"connected\",\n  \"callType\": \"outgoing\",\n  \"recordingLink\": \"https://storage.example.com/recordings/rec1.mp3\",\n  \"notes\": \"Discussed pricing and next steps\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/calls",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calls"]
        }
      }
    },
    {
      "name": "Get Calls By Lead",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/calls/lead/{{leadId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calls", "lead", "{{leadId}}"]
        }
      }
    },
    {
      "name": "Get Calls By Salesperson (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/calls/salesperson/{{salesUserId}}?start=2026-01-01&end=2026-01-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calls", "salesperson", "{{salesUserId}}"],
          "query": [
            { "key": "start", "value": "2026-01-01" },
            { "key": "end", "value": "2026-01-31" }
          ]
        }
      }
    },
    {
      "name": "Get Calls (Admin overview)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/calls?start=2026-01-01&end=2026-01-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calls"],
          "query": [
            { "key": "start", "value": "2026-01-01" },
            { "key": "end", "value": "2026-01-31" }
          ]
        }
      }
    }
  ]
}
